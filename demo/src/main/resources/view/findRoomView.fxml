<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="900.0" styleClass="shadow-pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #a57f9d;" fx:controller="controller.FindRoomView">
    <bottom>
   </bottom>
   <bottom>
        <VBox id="dragTarget" spacing="10" styleClass="background-pane" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER">
                <padding>
                    <Insets right="5" top="2" />
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="25.0">
               <Button id="switchButton" onAction="#switchBackToMenu" text="Back" />
               <Label styleClass="title-text" text="Find Rooms" />
                </HBox>
                <HBox id="right-icons" alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <Button onAction="#handleExitButtonClicked" styleClass="exit-button" />
                </HBox>
            </HBox>
            <VBox>
                <TableView fx:id="roomTable">
                    <columns>
                        <TableColumn fx:id="roomNameColumn" editable="false" text="Room Name" />
                        <TableColumn fx:id="pricePerNightColumn" editable="false" text="Price Per Night" />
                        <TableColumn fx:id="startDateColumn" editable="false" text="Start Date" />
                        <TableColumn fx:id="endDateColumn" editable="false" text="End Date" />
                        <TableColumn fx:id="roomStatusColumn" editable="false" text="Room Status" /> <!-- REMOVE: Make a filter for it -->
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
         <AnchorPane prefHeight="46.0" prefWidth="880.0">
            <children>
               <Button fx:id="viewButton" layoutX="815.0" layoutY="11.0" onAction="#viewRoom" styleClass="edit-button" text="View" />
            </children>
         </AnchorPane>
        </VBox>
   </bottom>
   <effect>
      <Blend />
   </effect>
</BorderPane>
