<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: #a57f9d;" styleClass="shadow-pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservationListView">
    <bottom>
   </bottom>
   <bottom>
        <VBox id="dragTarget" spacing="10" styleClass="background-pane" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER">
                <padding>
                    <Insets right="5" top="2" />
                </padding>
                <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="247.0" spacing="25.0">
               <Button id="switchButton" onAction="#switchBackToMenu" text="Back" />
               <Label styleClass="title-text" text="My Reservations" />
                </HBox>
                <HBox id="right-icons" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="660.0" spacing="10" HBox.hgrow="ALWAYS">
                    <Button onAction="#handleExitButtonClicked" styleClass="exit-button" />
                </HBox>
            </HBox>
            <VBox>
                <TableView fx:id="reservationTable">
                    <columns>
                        <TableColumn fx:id="orderIdColumn" editable="false" text="Order Id" />
                        <TableColumn fx:id="roomColumn" editable="false" text="Room" />
                        <TableColumn fx:id="reservationStartColumn" editable="false" text="Reservation Start" />
                        <TableColumn fx:id="reservationEndColumn" editable="false" text="Reservation End" />
                        <TableColumn fx:id="reservationStatusColumn" editable="false" text="Reservation Status" />
                        <TableColumn fx:id="roomOrderStatusColumn" editable="false" text="Room Order Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
         <AnchorPane prefHeight="46.0" prefWidth="880.0">
            <children>
               <Button fx:id="checkInButton" layoutX="676.0" layoutY="11.0" onAction="#checkIn" text="Check In" />
               <Button fx:id="checkOutButton" layoutX="773.0" layoutY="11.0" onAction="#checkOut" text="Check Out" />
            </children>
         </AnchorPane>
        </VBox>
   </bottom>
   <effect>
      <Blend />
   </effect>
</BorderPane>
